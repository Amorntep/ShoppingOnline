@model ShoppingOnline.Models.Products

@{
    ViewBag.Title = "insertProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>เพิ่มรายการสินค้า</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>สินค้า</h4>
        <hr />
        @Html.ValidationSummary(true)


        <div class="form-group">
            <label class="control-label col-md-2">
                ชื่อสินค้า
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductName)
                @Html.ValidationMessageFor(model => model.ProductName)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                จำนวนสินค้า
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Stock)
                @Html.ValidationMessageFor(model => model.Stock)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                ราคาสินค้า
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price)
                @Html.ValidationMessageFor(model => model.Price)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                ประเภทของสินค้า
            </label>
            <div class="col-md-10">
               @Html.DropDownListFor(model => model.CategoryID, (List<SelectListItem>)ViewBag.list,
                "เลือกประเภทสินค้า", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryID)
            </div>
        </div>
        
        <div class="form-group">
            <label class="control-label col-md-2">
            รายละเอียดของสินค้า
            </label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Details, new { @class="form-control" })
                @Html.ValidationMessageFor(model => model.Details)
            </div>
        </div>
        </div>
        
        <div class="form-group" style="margin-top:7%;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
